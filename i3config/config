}

# Sreen brightness controls
bindsym XF86MonBrightnessUp exec xbacklight -inc 10 # increase screen brightness
bindsym  XF86MonBrightnessDown exec xbacklight -dec 10 # decrease screen brightness


#Multimedia Keys
# increase volume
bindsym XF86AudioRaiseVolume exec amixer -q -c $audioCard sset Master 3+ unmute & amixer -q -c $audioCard sset Speaker unmute & amixer -q -c $audioCard sset Headphone unmute
# decrease volume
bindsym XF86AudioLowerVolume exec amixer -q -c $audioCard sset Master 3-
# mute volume
bindsym XF86AudioMute exec amixer -q -c $audioCard sset Master mute & amixer -q -c $audioCard sset Speaker mute & amixer -q -c $audioCard sett Headphone mute
# pause / play / next / previous
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

#numlock
bindsym Num_Lock exec numlock toggle

