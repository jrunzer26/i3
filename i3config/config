bindsym $mod+greater exec $next
bindsym $mod+Shift+greater exec $next
bindsym $mod+less exec $prev
bindsym $mod+previous exec $prev
bindsym $mod+slash exec $pause


set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (Shift+r) reboot, (Shift+s) shutdown
mode "$mode_system"{
	bindsym l exec i3lock -i $wallpaper -fd -I 30, mode "Default"
	bindsym e exec i3-msg exit
	bindsym s exec i3lock -i $wallpaper -fd -I 30 & systemctl suspend,mode "Default"
	bindsym h exec i3lock -i $wallpaper -fd -I 30 & systemctl hibernate,mode "Default"
	bindsym Shift+r exec systemctl reboot
	bindsym Shift+s exec systemctl poweroff

	#back to normal
	bindsym Return mode "Default"
	bindsym Escape mode "Default"
}

#gaps
smart_gaps on
gaps inner 15
gaps outer 0

#system mode
bindsym $mod+y  mode "$mode_system" 

#open file manager
bindsym $mod+o exec pcmanfm

#new window default border
new_window 1pixel
new_float 1pixel
